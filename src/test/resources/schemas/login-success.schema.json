{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success","token","user"],
  "properties": {
    "success": {"type": "boolean"},
    "message": {"type": "string"},
    "token": {"type": "string"},
    "user": {
      "type": "object",
      "required": ["id","email"],
      "properties": {
        "id": {"type":"integer"},
        "username": {"type": "string"},
        "email": {"type": "string"},
        "nome_completo": {"type": "string"}
      }
    }
  }
}